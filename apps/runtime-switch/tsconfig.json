{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "useUnknownInCatchVariables": false,
        "incremental": true,
        "outDir": "dist",
        "rootDir": "src",
    },
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.*"
    ]
}